<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_fondo"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMainLogin"
        android:layout_width="138dp"
        android:layout_height="41dp"
        android:layout_marginTop="388dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/mainStringButtonLogin"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMainBuscar"
        android:layout_width="229dp"
        android:layout_height="64dp"
        android:layout_marginTop="268dp"
        android:background="@drawable/roundedbutton"
        android:text="@string/mainStringButtonBuscar"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAgregarProfe"
        android:layout_width="51dp"
        android:layout_height="45dp"
        android:layout_marginTop="616dp"
        android:background="@drawable/roundedbutton"
        android:text="+"
        android:textColor="@color/colorPrimaryText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_marca" />


</androidx.constraintlayout.widget.ConstraintLayout>